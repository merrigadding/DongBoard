<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dongproject.user.mapper.UserMapper">
	<resultMap type="com.dongproject.user.dvo.UserVo" id="userInfo">
		<result column="user_id" property="userId"></result>
		<result column="user_password" property="userPassword"></result>
		<result column="user_address" property="userAddress"></result>
		<result column="user_phone" property="userPhone"></result>
		<result column="user_sex" property="userSex"></result>
		<result column="create_date" property="createDate"></result>
	</resultMap>
	<select id="userInfo" parameterType="com.dongproject.user.dvo.UserVo" resultMap="userInfo">
		select 
			   user_id,
		       user_password,
		       user_address,
		       to_char(LPAD(user_phone,11,0)) as user_phone,
		       user_sex,
		       create_date
	  	from user_info
	  	where user_id = #{userId} and user_password = #{userPassword}
	</select>
</mapper>
